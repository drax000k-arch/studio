rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read, update, and create their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Users can manage their own decision scenarios.
    match /users/{userId}/decisionScenarios/{scenarioId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Decisions are now nested under decisionScenarios, this is legacy.
    match /users/{userId}/decisions/{decisionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Community posts can be read by anyone, but only written by authenticated users.
    match /community-posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Public Scenarios: Readable by anyone, writable only by authenticated users.
    match /publicScenarios/{scenarioId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Comments: Readable by anyone, writable only by authenticated users.
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
}
