/**
 * @fileoverview Firestore Security Rules for Advisify AI.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user data, decision scenarios, and decision options.
 * Comments are stored in a top-level collection and are publicly readable, but only the owner can modify them.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Only the authenticated user can access their own profile.
 * - /users/{userId}/decisionScenarios/{decisionScenarioId}: Stores decision scenarios created by a user. Only the user can access these.
 * - /users/{userId}/decisionScenarios/{decisionScenarioId}/options/{decisionOptionId}: Stores options for a specific decision scenario. Only the user who owns the scenario can access these.
 * - /comments/{commentId}: Stores comments. Any authenticated user can read comments, but only the comment's author can modify it.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Public read access to comments.
 * - Only the comment owner can update or delete comments.
 *
 * Denormalization for Authorization:
 *  - Comments include the userId of the author to allow for owner-based write rules without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profiles.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile.
     *   - auth.uid: 'user123'
     *   - request.resource.data.id: 'user123'
     * @allow (get, update, delete) User with ID 'user123' can access their profile.
     *   - auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a profile for 'user123'.
     *   - auth.uid: 'user456'
     *   - request.resource.data.id: 'user123'
     * @deny (get, update, delete) User with ID 'user456' cannot access user 'user123' profile.
     *   - auth.uid: 'user456'
     * @principle Enforces document ownership for writes, restricts access to a user's own data.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.id == userId;
      allow delete: if isSignedIn() && isOwner(userId) && resource.data.id == userId;
    }

    /**
     * @description Manages decision scenarios for a specific user.
     * @path /users/{userId}/decisionScenarios/{decisionScenarioId}
     * @allow (create) User with ID 'user123' can create a decision scenario.
     *   - auth.uid: 'user123'
     *   - request.resource.data.userId: 'user123'
     * @allow (get, update, delete) User with ID 'user123' can access their decision scenario.
     *   - auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a decision scenario for 'user123'.
     *   - auth.uid: 'user456'
     *   - request.resource.data.userId: 'user123'
     * @deny (get, update, delete) User with ID 'user456' cannot access decision scenario of 'user123'.
     *   - auth.uid: 'user456'
     * @principle Enforces document ownership for writes, restricts access to a user's own data.
     */
    match /users/{userId}/decisionScenarios/{decisionScenarioId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource != null && resource.data.userId == userId;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null && resource.data.userId == userId;
    }

    /**
     * @description Manages decision options within a specific decision scenario.
     * @path /users/{userId}/decisionScenarios/{decisionScenarioId}/options/{decisionOptionId}
     * @allow (create) User with ID 'user123' can create an option for their decision scenario.
     *   - auth.uid: 'user123'
     * @allow (get, update, delete) User with ID 'user123' can access options for their decision scenario.
     *   - auth.uid: 'user123'
     * @deny (create) User with ID 'user456' cannot create a decision option for 'user123' scenario.
     *   - auth.uid: 'user456'
     * @deny (get, update, delete) User with ID 'user456' cannot access decision options of 'user123' scenario.
     *   - auth.uid: 'user456'
     * @principle Enforces document ownership for writes, restricts access to a user's own data.
     */
    match /users/{userId}/decisionScenarios/{decisionScenarioId}/options/{decisionOptionId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Manages comments on decision scenarios.
     * @path /comments/{commentId}
     * @allow (get, list) Any signed-in user can read comments.
     *   - auth.uid: 'any_user'
     * @allow (create) User with ID 'user123' can create a comment.
     *   - auth.uid: 'user123'
     *   - request.resource.data.userId: 'user123'
     * @allow (update, delete) User with ID 'user123' can modify their own comment.
     *   - auth.uid: 'user123'
     *   - resource.data.userId: 'user123'
     * @deny (create) User with ID 'user456' cannot create a comment on behalf of 'user123'.
     *   - auth.uid: 'user456'
     *   - request.resource.data.userId: 'user123'
     * @deny (update, delete) User with ID 'user456' cannot modify comment of 'user123'.
     *   - auth.uid: 'user456'
     *   - resource.data.userId: 'user123'
     * @principle Allows public reads, enforces document ownership for writes.
     */
    match /comments/{commentId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isOwner(resource.data.userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(resource.data.userId) && resource != null;
    }
  }
}