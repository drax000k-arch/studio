rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Users can only read and write their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User-specific decisions
    match /users/{userId}/decisions/{decisionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Community Posts: Allow anyone to read, but only authenticated users to create.
    match /community-posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Decision Scenarios: Users can manage their own decision scenarios.
    match /users/{userId}/decisionScenarios/{scenarioId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public Scenarios: Readable by anyone, writable only by authenticated users.
    match /publicScenarios/{scenarioId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Comments: Readable by anyone, writable only by authenticated users.
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
}
