rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants access to user documents based on path-based ownership.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with matching userId creates their own document.
     * @allow (get, update, delete) - Authenticated user with matching userId accesses their own document.
     * @deny (create) - Authenticated user attempts to create a user document with a different userId.
     * @deny (get, update, delete) - Authenticated user attempts to access a user document with a different userId.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing all users is not permitted.
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Grants access to decision scenarios based on path-based ownership.
     * @path /users/{userId}/decisionScenarios/{decisionScenarioId}
     * @allow (create) - Authenticated user with matching userId creates a new decision scenario under their user document.
     * @allow (get, update, delete) - Authenticated user with matching userId accesses a decision scenario under their user document.
     * @deny (create) - Authenticated user attempts to create a decision scenario under a different user's document.
     * @deny (get, update, delete) - Authenticated user attempts to access a decision scenario under a different user's document.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/decisionScenarios/{decisionScenarioId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Grants access to decision options based on path-based ownership.
     * @path /users/{userId}/decisionScenarios/{decisionScenarioId}/options/{decisionOptionId}
     * @allow (create) - Authenticated user with matching userId creates a new decision option under their decision scenario.
     * @allow (get, update, delete) - Authenticated user with matching userId accesses a decision option under their decision scenario.
     * @deny (create) - Authenticated user attempts to create a decision option under a different user's or scenario's document.
     * @deny (get, update, delete) - Authenticated user attempts to access a decision option under a different user's or scenario's document.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/decisionScenarios/{decisionScenarioId}/options/{decisionOptionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isOwner(userId) && resource != null;
    }

    /**
     * @description Grants read access to all users for comments, but restricts modification and deletion to the owner.
     * @path /comments/{commentId}
     * @allow (get, list) - Any user can read comments.
     * @allow (create) - Authenticated user can create a new comment.
     * @allow (update, delete) - Only the user who created the comment can modify or delete it.
     * @deny (create) - Unauthenticated user attempts to create a comment.
     * @deny (update, delete) - Authenticated user attempts to modify or delete a comment they did not create.
     * @principle Allows public read access but enforces ownership for writes.
     */
    match /comments/{commentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if true;
      allow list: if false; // Intentionally disable listing to prevent broad data access.
      allow create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId && resource != null;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId && resource != null;
    }
  }
}